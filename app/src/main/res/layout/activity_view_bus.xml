<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B213D"
    tools:context=".UI.RegisterActivity"
    android:orientation="vertical">
    <TextView
        android:id="@+id/bus_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:textSize="36dp"
        android:text="Bus Name"
        android:textColor="@color/white"
        android:gravity="center"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Capacity: "
            android:textColor="@color/white"
            android:textSize="18dp"></TextView>
        <TextView
            android:id="@+id/cap_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="-"
            android:textSize="18dp"
            android:textColor="@color/white"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Price: "
            android:textColor="@color/white"
            android:textSize="18dp"></TextView>
        <TextView
            android:id="@+id/price_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="-"
            android:textSize="18dp"
            android:textColor="@color/white"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Bus Type: "
            android:textColor="@color/white"
            android:textSize="18dp"></TextView>
        <TextView
            android:id="@+id/type_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="-"
            android:textSize="18dp"
            android:textColor="@color/white"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Departure: "
            android:textColor="@color/white"
            android:textSize="18dp"></TextView>
        <TextView
            android:id="@+id/origin_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="-"
            android:textSize="18dp"
            android:textColor="@color/white"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Destination: "
            android:textColor="@color/white"
            android:textSize="18dp"></TextView>
        <TextView
            android:id="@+id/dest_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="-"
            android:textSize="18dp"
            android:textColor="@color/white"></TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/departure"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="12dp">
        <TextView
            android:layout_width="90dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="Date"
            android:textColor="@color/white"></TextView>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_calendar_month_24"></ImageView>
        <Spinner
            android:id="@+id/date_spinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"></Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="12dp">
        <CheckBox
            android:id="@+id/AC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AC"
            android:textColor="@color/white"
            android:layout_gravity="start"
            android:textSize="18sp"/>
        <CheckBox
            android:id="@+id/WiFi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Wifi"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="18sp"/>
        <CheckBox
            android:id="@+id/Toilet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Toilet"
            android:textColor="@color/white"
            android:layout_gravity="end"
            android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="12dp">
        <CheckBox
            android:id="@+id/LCDTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LCD TV"
            android:textColor="@color/white"
            android:layout_gravity="start"
            android:textSize="18sp"/>
        <CheckBox
            android:id="@+id/Coolbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Coolbox"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="18sp"/>
        <CheckBox
            android:id="@+id/Lunch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lunch"
            android:textColor="@color/white"
            android:layout_gravity="end"
            android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="12dp">
        <CheckBox
            android:id="@+id/LargeBaggage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:text="Large Baggage"
            android:textColor="@color/white"
            android:textSize="18sp" />
        <CheckBox
            android:id="@+id/ElectricSocket"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Electric Socket"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="18sp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/seat_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="24dp"></ListView>
</LinearLayout>
