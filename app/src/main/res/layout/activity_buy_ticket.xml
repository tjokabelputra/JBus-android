<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B213D"
    tools:context=".UI.RegisterActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:textSize="36dp"
        android:text="Booking Ticket"
        android:textColor="@color/white"
        android:gravity="center"></TextView>
    <LinearLayout
        android:id="@+id/departure"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="12dp">
        <TextView
            android:layout_width="90dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="Date"
            android:textColor="@color/white"></TextView>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_calendar_month_24"></ImageView>
        <Spinner
            android:id="@+id/date_spinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"></Spinner>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bus Seats"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:layout_marginHorizontal="24dp"></TextView>
    <ListView
        android:id="@+id/seat_list"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginVertical="24dp"
        android:layout_marginHorizontal="36dp"></ListView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chosen Seats"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_marginHorizontal="24dp"></TextView>
    <ListView
        android:id="@+id/chose_seats"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginVertical="18dp"
        android:layout_marginHorizontal="36dp"></ListView>
    <Button
        android:id="@+id/book_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:text="Make Booking"></Button>
</LinearLayout>
